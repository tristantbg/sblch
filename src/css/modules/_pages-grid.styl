.pages-grid
	span(1)
	&.white
		background $primary
	.pages-grid--title
		padding $gutter
		+below($sm)
			padding 1rem 1rem 4rem
			font-size 2rem
			medium()
	.pages-grid--items
		display flex
		flex-wrap wrap
		align-items stretch
		+below($sm)
			padding 0 1rem
	.pages-grid--item
		span(1/4)
		padding 0 $gutter $gutter
		margin-bottom $gutter
		text-align center
		+above($sm + 1)
			box-shadow 1px 0 0 currentColor
		+below($lg)
			span(1/3)
		+below($sm)
			stack()
			position relative
			text-align center
			padding 0 0 1rem
			margin-bottom 2rem
			background $ghostwhite
			&:not(:last-child)::after
				content ''
				position absolute
				bottom -1rem
				left -1rem
				height 1px
				width 100vw
				background $secondary