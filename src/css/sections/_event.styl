#page-content[page-type=event]
	span(1)
	background alpha($violet, 0.6)

#event-ticket
	position fixed
	background $secondary
	z-index 1
	overflow visible
	+above($sm + 1)
		padding 2.2rem
		top 3rem
		width 10vw
		height 10vw
		right 3rem
	+below($sm)
		border-radius 0
		top initial
		bottom 0
		left 0
		width 100%
		height 3rem
		padding 0.6rem
		font-size 1.5rem
		text-align center
		color $primary
		&::after
			content 'RÃ©servez'
	svg
		display block
		width 100%
		height 100%
		+below($sm)
			display none
	div
		text-align center
		position absolute
		width 100%
		bottom -2em
		left 0

#event-navigation-prev, #event-navigation-next
	position fixed
	bottom 0
	width 3rem
	height 3rem
	padding 0.7rem
	background $secondary
	z-index 2
	+above($sm + 1)
		display none
	svg
		display block
		width 100%
		height 100%

#event-navigation-prev
	left 0
	border-right 1px solid $primary

#event-navigation-next
	right 0
	border-left 1px solid $primary

.event-description
	span(3/5)
	padding $gutter
	+above($sm + 1)
		min-height 100vh
	+below($sm)
		stack()
		padding 1rem
		font-size 1.5rem
		p
			font-size 1.5rem

.event-header
	+above($sm + 1)
		padding 0 25%

.event-hero
	.slider
		margin-bottom 6rem
	&:empty
		display none

#event-distribution
	+above($sm + 1)
		span(1/2)

.event-infos
	span(2/5)
	+above($sm + 1)
		min-height 100vh
		padding $gutter
		background $ghostwhite
	+below($sm)
		stack()
		background $primary
		padding 1rem
	& > *
		+above($sm + 1)
			span(1/2)
			clear both

.event-date, .event-date.subtitle
	+below($sm)
		font-size 1.1rem

.event-duration
	width 5rem
	height 5rem
	&+ .event-icon
		margin-top -3rem

.event-icon
	width 5rem
	height 5rem
	svg
		display block
		width 100%
		height 100%

.event-representations
	.bb
		&:not(.bold):hover
			background $lightblue
			cursor default
		&:last-child
			padding-bottom .2em
			border-bottom 1px solid
		&.finished
			color $violet

#event-related
	position relative
	z-index 5

#event-medias
	span(1)
